// LOGIN

.black-logo
  height: 1.4em

// LOADING

#loading-overlay
  z-index: 1000
  position: fixed
  top: 0
  left: 0
  width: 100vw
  height: 100vh
  background-color: rgba(0, 0, 0, .2)
  opacity: 0
  pointer-events: none
  &.loading
    opacity: 1
    pointer-events: all

// HEADER

#header
  background-color: $color-header

.logo-wrapper
  line-height: 0

.logo
  height: 1.4em
  fill: $color-white

// LIST

// Reset button styles
button
  appearance: none
  background-color: transparent
  border: 0
  padding: 0

// Button styles
.button,
a.button
  background-color: $color-button-default
  color: $color-white
  border-radius: 5px
  padding: ($margin-small*0.8) $margin-small
  display: inline-block
  cursor: pointer
  &.button-small
    padding: ($margin-tiny*0.8) $margin-tiny
  &.button-delete
    background-color: $color-button-warning
  &:disabled
    background-color: $color-button-disabled
    cursor: default;

.list-rows-holder
  > *
    &:nth-child(odd)
      background-color: $color-table-light
    &:nth-child(even)
      background-color: $color-table-dark

.list-rows-item
  min-height: 4em

// FORM

input
  background-color: $color-white
  color: $color-black
  border: 1px solid $color-form-border
  border-radius: 5px
  padding: $margin-small
  width: 100%

// Datepicker Fixes
// This is a temporary fix while it gets fixed
.react-datepicker-popper
  z-index: 500

.react-datepicker__time-list
  padding-right: 0 !important

.react-datepicker-wrapper, .react-datepicker__input-container
  display: block !important

